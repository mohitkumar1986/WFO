<mvc:View	xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m" 
			controllerName="WSR.WorkspaceReservation.controller.HomePage" 
			displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page	id="page" 
						title="({i18n>title})" titleAlignment="Center" titleLevel="H6"
						tooltip="Web App for Reserving your Seat in Office">
					<headerContent>
				    	<Image src="/webapp/Images/wstr.jpg" width="170px" height="140px" id="image0"/>
					</headerContent>
					<content>	
						<Panel	class="sapUiResponsiveMargin"
								width="auto">
							<Button	text="{i18n>lastWeekButtonText}" 
									class="sapUiResponsiveMargin"
									width="10%"
									press="onPressPrevious"
									icon=""/> 
							<Button	text="{i18n>locationButtonText}" 
									class="sapUiResponsiveMargin"
									width="60%"
									press="onShowHello"/>
							<Button	text="{i18n>nextWeekButtonText}" 
									class="sapUiResponsiveMargin"
									width="10%"
									press="onPressNext"/>
						</Panel>
							<List	id		="myList"
									mode	="MultiSelect"
									class	="sapUiResponsiceMargin"
									selectionChange = "onSelectionChange"
									items	="{
													path: 'screenMock>/screenReservation'
											  }">
								<items>
									<StandardListItem	title="{
																	path: 'screenMock>day',
																	formatter: '.formatter.displayDate'
																}"
														description="{screenMock>colleagues}"
														icon="sap-icon://available"
														iconInset="false"
														highlight="None"
														info="{screenMock>status}"
														infoState="Success"
														class="sapUiResponsiveMargin"/>
								</items>
							</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>